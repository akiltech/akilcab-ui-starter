{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["app/pages/*"],
      "@modules/*": ["app/modules/*"],

      "@core/*": ["core/*"],
      "@guards/*": ["core/guards/*"],
      "@interceptors/*": ["core/interceptors/*"],
      "@services/*": ["core/services/*"],
      "@utils/*": ["core/utils/*"],

      "@shared/*": ["shared/*"],
      "@components/*": ["shared/components/*"],
      "@layouts/*": ["shared/layouts/*"]
    }
  }
}
